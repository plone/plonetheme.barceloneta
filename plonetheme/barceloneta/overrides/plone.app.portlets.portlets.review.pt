<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      tal:omit-tag="">

  <div class="card portlet portletWorkflowReview"
      i18n:domain="plone">

    <div class="card-header">
      <a href="#"
          class="tile"
          tal:define="full_review_link view/full_review_link"
          tal:omit-tag="not:full_review_link"
          tal:attributes="href full_review_link"
          i18n:translate=""
          tal:content="view/title" />
    </div>

    <div class="card-body"
        tal:define="supress_icon    view/data/no_icons;
                    supress_thumb   view/data/no_thumbs;
                    thumb_scale python:view.thumb_scale();
                    ">
      <ul>
        <tal:items tal:repeat="obj view/review_items">
        <li class="portletItem"
            tal:define="oddrow repeat/obj/odd;
                        review_state_class obj/review_state_class;
                        image obj/images;
                        hasImage obj/hasImage;
                        item_class python: obj['item_class'] if not supress_icon else '';"
            tal:attributes="class python:oddrow and 'portletItem even' or 'portletItem odd'">

          <a href="#"
              tal:attributes="href string:${obj/path}/view;
                              title obj/description;
                              class string:$review_state_class tile $item_class">
            <img tal:condition="python:not supress_thumb and hasImage and thumb_scale"
                tal:replace="structure python:image.scale('image', scale=thumb_scale).tag(css_class='float-right thumb-'+thumb_scale)"/>
            <span tal:replace="obj/title">Title</span>
          </a>
          <span class="portletItemDetails">
              <span tal:replace="obj/creator">Jim Smith</span> &mdash;
              <time tal:replace="obj/mod_date"> May 5</time>
          </span>

        </li>
        </tal:items>
      </ul>
    </div>

    <div class="card-footer"
        tal:define="full_review_link view/full_review_link"
        tal:condition="full_review_link">
      <a href="#"
          class="tile"
          tal:attributes="href full_review_link"
          i18n:translate="box_full_review_list">Full review list&hellip;</a>
    </div>

  </div>

</html>