<section id="section-leadimage" tal:condition="view/available" tal:define="scale_func context/@@images; scaled_image python: getattr(context.aq_explicit, 'image', False) and scale_func.scale('image', scale='large')">

  <figure class="newsImageContainer" tal:condition="python: scaled_image">
      <img tal:replace="structure python: scaled_image.tag(css_class='figure-img img-fluid')" />
      <figcaption class="figure-caption" tal:condition="context/image_caption|nothing" tal:content="context/image_caption">
        Image caption
      </figcaption>
  </figure>

</section>